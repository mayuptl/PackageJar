<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.example</groupId>
  <artifactId>app-utils</artifactId>
  <name>app-utils</name>
  <version>2.0-SNAPSHOT</version>
  <url>http://www.example.com</url>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <release>${java.version}</release>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.6.1</version>
        <executions>
          <execution>
            <id>test-recorder</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>TestRecorder-${TestRecorder.version}</finalName>
              <minimizeJar>true</minimizeJar>
              <createDependencyReducedPom>true</createDependencyReducedPom>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>org/example/excel/**</exclude>
                    <exclude>org/example/json/**</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
          <execution>
            <id>excel-reader</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>ExcelReader-${ExcelReader.version}</finalName>
              <minimizeJar>true</minimizeJar>
              <createDependencyReducedPom>true</createDependencyReducedPom>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>org/example/video/**</exclude>
                    <exclude>org/example/json/**</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
          <execution>
            <id>json-reader</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>JsonReader-${JsonReader.version}</finalName>
              <minimizeJar>true</minimizeJar>
              <createDependencyReducedPom>true</createDependencyReducedPom>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>org/example/video/**</exclude>
                    <exclude>org/example/excel/**</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.4.2</version>
        <configuration>
          <skipIfEmpty>true</skipIfEmpty>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>3.6.3</version>
        <executions>
          <execution>
            <id>attach-javadocs-recorder</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <finalName>TestRecorder-${TestRecorder.version}-javadoc</finalName>
              <excludePackageNames>org.example.excel:org.example.json</excludePackageNames>
            </configuration>
          </execution>
          <execution>
            <id>attach-javadocs-excel</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <finalName>ExcelReader-${ExcelReader.version}-javadoc</finalName>
              <excludePackageNames>org.example.video:org.example.json</excludePackageNames>
            </configuration>
          </execution>
          <execution>
            <id>attach-javadocs-json</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <finalName>JsonReader-${JsonReader.version}-javadoc</finalName>
              <excludePackageNames>org.example.excel:org.example.video</excludePackageNames>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <docfilessubdirs>true</docfilessubdirs>
          <failOnError>false</failOnError>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <java.version>21</java.version>
    <JsonReader.version>3.0</JsonReader.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <ExcelReader.version>3.0</ExcelReader.version>
    <TestRecorder.version>3.0</TestRecorder.version>
  </properties>
</project>
