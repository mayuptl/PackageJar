<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">

    <Properties>
        <Property name="CONSOLE_PATTERN">%d{yyyy-MM-dd HH:mm:ss} %highlight{[%p]}{ERROR=red, WARN=yellow bold, INFO=green, DEBUG=blue, TRACE=blue} %c{1} - %msg%n</Property>
        <Property name="FILE_PATTERN">%d{yyyy-MM-dd HH:mm:ss} [%p] %c{1} - %msg%n</Property>
        <!-- If you want to print driver id in logs, need more config in Listeners -> onTestStart -->
        <!-- Generate unique driver instance ID: instanceID =String.valueOf(System.identityHashCode(driver));
            Add put this id in log4j : ThreadContext.put("driverId", instanceID); -->
       <!-- <Property name="FILE_PATTERN_DID">%d{yyyy-MM-dd HH:mm:ss} [%X{driverId}] [%p] %c{1} - %msg%n</Property>
        <Property name="CONSOLE_PATTERN_DID">%d{yyyy-MM-dd HH:mm:ss} [%X{driverId}] %highlight{[%p]}{ERROR=red, WARN=yellow bold, INFO=green, DEBUG=blue, TRACE=blue} %c{1} - %msg%n</Property>-->
        <Property name="CONSOLE_PATTERN">%d{yyyy-MM-dd HH:mm:ss} [%p] %c{1} - %msg%n</Property>
        <Property name="FILE_PATTERN">%d{yyyy-MM-dd HH:mm:ss} [%p] %c{1} - %msg%n</Property>
    </Properties>

    <Appenders>
        <!-- Console Appender (STDOUT) -->
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="${CONSOLE_PATTERN}" />
        </Console>
        <!-- File Appender -->
        <File name="FileAppender" fileName="execution-output/test-logs/Logs.log" append="false">
            <PatternLayout pattern="${FILE_PATTERN}" />
        </File>
    </Appenders>

    <!-- Loggers Configuration -->
    <Loggers>
        <Root level="info">
            <AppenderRef ref="STDOUT" />
            <AppenderRef ref="FileAppender" />
        </Root>
    </Loggers>
</Configuration>