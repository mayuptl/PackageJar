<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.example</groupId>
    <artifactId>app-utils</artifactId>
    <version>2.0-SNAPSHOT</version>

    <name>app-utils</name>
    <url>http://www.example.com</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>21</java.version>
        <ExcelReader.version>3.0</ExcelReader.version>
        <JsonReader.version>3.1.0</JsonReader.version>
        <TestRecorder.version>3.0</TestRecorder.version>
    </properties>

    <dependencies>
        <!-- Apache POI: Core components -->
        <!-- https://mvnrepository.com/artifact/org.apache.poi/poi -->
        <dependency>
            <groupId>org.apache.poi</groupId>
            <artifactId>poi</artifactId>
            <version>4.1.2</version>
        </dependency>
        <dependency>
            <groupId>org.apache.poi</groupId>
            <artifactId>poi-ooxml</artifactId>
            <version>4.1.2</version>
        </dependency>
        <!--test execution recording-->
        <!-- https://mvnrepository.com/artifact/com.github.stephenc.monte/monte-screen-recorder -->
        <dependency>
            <groupId>com.github.stephenc.monte</groupId>
            <artifactId>monte-screen-recorder</artifactId>
            <version>0.7.7.0</version>
        </dependency>
        <!--Json input file-->
        <!-- https://mvnrepository.com/artifact/com.fasterxml.jackson.core/jackson-databind -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>2.20.0</version>
        </dependency>
        <!-- https://mvnrepository.com/artifact/commons-io/commons-io -->
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>2.20.0</version>
        </dependency>
        <!--TestNG-->
        <!-- https://mvnrepository.com/artifact/org.testng/testng -->
       <!-- <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>7.11.0</version>
        </dependency>-->
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <release>${java.version}</release>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.6.1</version>
                <executions>
                    <execution>
                        <id>test-recorder</id>
                        <phase>package</phase>
                        <goals><goal>shade</goal></goals>
                        <configuration>
                            <finalName>TestRecorder-${TestRecorder.version}</finalName>
                            <minimizeJar>true</minimizeJar>
                            <filters>
                                <filter>
                                    <artifact>org.example:app-utils</artifact>
                                    <includes>
                                        <include>org/example/video/**</include>
                                    </includes>
                                    <excludes>
                                        <exclude>org/example/excel/**</exclude>
                                        <exclude>org/example/json/**</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>com.github.stephenc.monte:monte-screen-recorder</artifact>
                                    <includes><include>**</include></includes>
                                </filter>
                                <filter>
                                    <artifact>*:*</artifact> <excludes>
                                    <exclude>org/apache/poi/**</exclude>
                                    <exclude>com/fasterxml/jackson/**</exclude>
                                    <exclude>commons-io/**</exclude>
                                </excludes>
                                </filter>
                            </filters>
                        </configuration>
                    </execution>

                    <execution>
                        <id>excel-reader</id>
                        <phase>package</phase>
                        <goals><goal>shade</goal></goals>
                        <configuration>
                            <finalName>ExcelReader-${ExcelReader.version}</finalName>
                            <minimizeJar>true</minimizeJar>
                            <filters>
                                <filter>
                                    <artifact>org.example:app-utils</artifact>
                                    <includes>
                                        <include>org/example/excel/**</include>
                                    </includes>
                                    <excludes>
                                        <exclude>org/example/video/**</exclude>
                                        <exclude>org/example/json/**</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>org.apache.poi:*</artifact>
                                    <includes><include>**</include></includes>
                                </filter>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>com/github/stephenc/monte/**</exclude>
                                        <exclude>com/fasterxml/jackson/**</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.4.2</version>
                <configuration>
                    <skipIfEmpty>true</skipIfEmpty>
                </configuration>
            </plugin>
            <!-- 2. Javadoc Plugin (Attaches Documentation) -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>3.6.3</version>
                <configuration>
                    <docfilessubdirs>true</docfilessubdirs>
                    <failOnError>false</failOnError>
                </configuration>
                <executions>
                    <execution>
                        <id>attach-javadocs-recorder</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <configuration>
                            <finalName>TestRecorder-${TestRecorder.version}-javadoc</finalName>
                            <excludePackageNames>org.example.excel:org.example.json</excludePackageNames>
                        </configuration>
                    </execution>

                    <execution>
                        <id>attach-javadocs-excel</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <configuration>
                            <finalName>ExcelReader-${ExcelReader.version}-javadoc</finalName>
                            <excludePackageNames>org.example.video:org.example.json</excludePackageNames>
                        </configuration>
                    </execution>

                    <execution>
                        <id>attach-javadocs-json</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <configuration>
                            <finalName>JsonReader-${JsonReader.version}-javadoc</finalName>
                            <excludePackageNames>org.example.excel:org.example.video</excludePackageNames>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>